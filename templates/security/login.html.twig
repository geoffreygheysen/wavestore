{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center my-5">
            <div class="col-4">
                <div class="text-center">
                    <form class="form-signin" action="{{ path('security_login') }}" method="post">
                        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                        <label for="inputEmail" class="sr-only">Email address</label>
                        <input placeholder="Email" required name="_username" type="text" class="form-control">

                        <label for="inputPassword" class="sr-only">Password</label>
                        <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">

                        <button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
