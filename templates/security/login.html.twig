{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center align-items-center my-5" style="height:35em;">
            <div class="col-4">
                <div class="text-center">
                    <form class="form-signin" action="{{ path('security_login') }}" method="post">
                        <h1 class="h3 mb-3 font-weight-normal my-3">Connexion</h1>
                        <input placeholder="Email" required name="_username" type="text" class="form-control my-3">

                        <input placeholder="Mot de passe" required name="_password" type="password" class="form-control my-3">

                        <button class="btn btn-lg btn-primary btn-block my-3" type="submit">Connexion</button>
                    </form>
                    <p class="my-3">Pas encore inscris ? Fait le <a href="{{ path('security_registration') }}">Ici</a></p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
